<%= form_for([@exercise, @submission], id: 'exercise-submission-form', html: {role: 'form'}) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
        <% @submission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <h1>
        <%= @exercise.title %>
        <small> - <%= @exercise.language %></small>
      </h1>
      <section>
        <% if @exercise.guide %>
          <p>
            <%= raw t :belongs_to_guide, guide: link_to_guide(@exercise.guide) %>
          </p>
         <% else %>
          <p>
            <%= raw t :authored_by, author: link_to(@exercise.author.name, user_path(@exercise.author)) %>
          </p>
        <% end %>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <section>
        <%= taglist_tag @exercise.tag_list %>
      </section>
      <div>
        <p>
          <%= @exercise.description_html %>
        </p>
      </div>
      <div>
        <% if @exercise.hint %>
          <a data-toggle="collapse"
             href="#hint-section">
            <%= label :exercise, :hint %>
          </a>

          <div id="hint-section" class="collapse">
            <p>
              <%= @exercise.hint_html %>
            </p>
          </div>
        <% end %>
      </div>
      <% restricted_to_author @exercise do %>
        <%= link_to t('edit'), edit_exercise_path(@exercise), class: 'btn btn-default' if @exercise.can_edit? %>
      <% end %>
    </div>

    <div class="col-md-7">
      <div data-spy="affix" data-offset-top="190">
      <div class="field form-group">
        <%= f.text_area :content, class: 'form-control', id: 'editor', value: @previous_submission_content %>
        <%= hidden_field_tag(:exercise_language, @exercise.language) %>
      </div>
      <div class="actions form-group text-right">
        <%= f.submit t(:create_submission), class: 'btn btn-primary' %>
        <%= link_to t('my_submissions'), exercise_submissions_path(@exercise), class: 'btn btn-default' %>
      </div>
    </div>

    </div>
  </div>






<% end %>
